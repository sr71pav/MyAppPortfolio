<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/darkorange</item>
        <item name="colorPrimaryDark">@color/darkerorange</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="CapstoneButton" >
        <item name="android:background">@color/darkred</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
    </style>
    <style name="StandardButton" >
        <item name="android:background">@color/orange</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
    </style>
</resources>
